@model CinemaBooking.Models.lien_he

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <div class="page-title-box">
                        <h4 class="font-size-18">Email Read</h4>
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Veltrix</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Email</a></li>
                            <li class="breadcrumb-item active">Email Read</li>
                        </ol>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="float-right d-none d-md-block">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle waves-effect waves-light" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="mdi mdi-settings mr-2"></i> Settings
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <!-- Left sidebar -->
                    <div class="email-leftbar card">
                        <a href="@Url.Action("ListFeedback","Feedback")" class="btn btn-danger rounded btn-custom btn-block waves-effect waves-light">Hòm thư</a>
                        <div class="mail-list mt-4">
                            <a href="@Url.Action("ListFeedback","Feedback")" class="active">Thư đến<span class="ml-1">(@ViewBag.count)</span></a>
                        </div>


                        <h5 class="mt-4">Thư cần xử lý:</h5>

                        <div class="mail-list mt-4">
                            <a href="#"><span class="mdi mdi-arrow-right-drop-circle text-warning float-right"></span>Thư chờ phản hồi (@ViewBag.count1)</a>
                            <a href="#"><span class="mdi mdi-arrow-right-drop-circle text-danger float-right"></span>Thư đã hủy (@ViewBag.count0)</a>
                            <a href="#"><span class="mdi mdi-arrow-right-drop-circle text-success float-right"></span>Thư đã phản hồi (@ViewBag.count2)</a>
                        </div>
                    </div>
                    <!-- End Left sidebar -->
                    <!-- Right Sidebar -->
                    <div class="email-rightbar mb-3">

                        <div class="card">


                            <div class="card-body">

                                <div class="media mb-4">
                                    <img class="d-flex mr-3 rounded-circle avatar-sm" src="/template/admin/assets/images/users/user-1.jpg" alt="Generic placeholder image">
                                    <div class="media-body">
                                        <h4 class="font-size-15 m-0">@Model.ho_ten</h4>
                                        <small class="text-muted">@Model.email</small>
                                    </div>
                                </div>

                                <h4 class="mt-0 font-size-16">@Model.tieu_de</h4>

                                <p>@Model.noi_dung</p>
                                <hr />



                                @if (Model.status == 1)
                                {
                                    <a href="@Url.Action("DeleteConfirm","Feedback", new{id = Model.id})" class="btn btn-danger waves-effect waves-light mr-1"><i class="far fa-trash-alt"></i></a>
                                    <a href="@Url.Action("Delete","Feedback", new{id = Model.id})" class="btn btn-success waves-effect waves-light mr-1"><i class="far fa-file-excel"></i> Hủy Thư</a>
                                    <a href="@Url.Action("Reply", "Feedback", new {@id = @Model.id})" class="btn btn-primary waves-effect waves-light mr-1"><i class="mdi mdi-reply"></i> Reply</a>

                                }
                                else
                                {
                                    if (Model.tra_loi != null)
                                    {
                                        <div class="form-group">
                                            <div class="summernote">
                                                <b>Đã trả lời :</b>
                                                <p>@Html.Raw(@Model.tra_loi)</p>
                                            </div>
                                        </div>
                                        <hr />
                                    }
                                    <a href="@Url.Action("ListFeedback","Feedback")" class="btn btn-info waves-effect waves-light mr-1"><i class="fas fa-undo-alt"></i></a>
                                    <a href="@Url.Action("DeleteConfirm","Feedback", new{id = Model.id})" class="btn btn-danger waves-effect waves-light mr-1"><i class="far fa-trash-alt"></i></a>
                                }
                            </div>

                        </div>

                    </div> <!-- end Col-9 -->

                </div>

            </div><!-- End row -->



        </div> <!-- container-fluid -->
    </div>
</div>
