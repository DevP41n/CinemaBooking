@model IEnumerable<CinemaBooking.Models.rap_chieu>

@{
    ViewBag.Title = "CinemaList";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <div class="page-title-box">
                        <h4 class="font-size-18">Danh sách rạp phim</h4>
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                            <li class="breadcrumb-item active">Rạp phim</li>
                        </ol>
                    </div>
                </div>


            </div>
            <!-- end page title -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <ul class="nav nav-tabs nav-tabs-custom" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#list" role="tab">
                                        <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                                        <span class="fas fa-list-ol">&ensp;Danh Sách</span>
                                    </a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active p-3" id="list" role="tabpanel">
                                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                        <thead>
                                            <tr>
                                                <th>
                                                    STT
                                                </th>
                                                <th>
                                                    Tên rạp
                                                </th>
                                                <th>
                                                    Địa chỉ
                                                </th>                                              
                                                <th>
                                                    Công cụ
                                                </th>
                                            </tr>
                                        </thead>

                                        @{ int rownumber = 1; }
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                            <tr>
                                                <td>
                                                    @(rownumber++)
                                                </td>

                                                <td>
                                                    @item.ten_rap
                                                </td>
                                                <td>
                                                    @item.dia_chi
                                                </td>
                                                <td>
                                                    <a type="button" class="btn btn-primary" href="@Url.Action("EditCinema","CinemaRoom",new { id = item.id })">
                                                        Sửa
                                                    </a>
                                                    <a type="button" class="btn btn-primary" href="@Url.Action("DeleteCinema","CinemaRoom",new { id = item.id })">
                                                        Xóa
                                                    </a>
                                                </td>
                                                
                                                    
                                            </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->



        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->





</div>