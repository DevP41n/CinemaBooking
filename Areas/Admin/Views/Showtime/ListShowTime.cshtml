@section Scripts{
    <script>
        $(document).ready(function () {
            //List time
            $('body').on('click', '.ListTime', function () {
                var idsuatchieu = $(this).data('id');
                LoadTime(idsuatchieu);
            });
            //Show data create
            $('body').on('click', '.CreateFr', function () {
                $('#EditTime').modal('hide');
                var id = $(this).data('id');
                ShowCreateTimeFr(id);
            });
           //btn Xóa
            $('body').on('click', '.deletet', function () {
                var id = $(this).data('id');
                var idsc = $(this).data('idsc');
                DeleteTime(id, idsc);
                sleep(600);
                LoadTime(idsc);
            });
            //btn thêm timeframe cho suat chieu
            $('body').on('click', '#CreateTime', function () {
                var id = $('#idsc').val();
                var idtime = $('#timeframe').val();
                CreateTimeFr(id, idtime);
                sleep(600);
                LoadTime(id);
            });

            function LoadTime(idsuatchieu) {
                $.ajax({
                    url: '/Showtime/ShowDataTime/',
                    type: 'GET',
                    data: {
                        idsuatchieu: idsuatchieu,
                    },
                    success: function (res) {
                        if (res.count != null) {
                            var itemid = res.id;
                            var itemtime = res.Times;
                            var html = "";
                            var create = "";
                            create += "<a class='btn btn-success pull-right CreateFr' data-target='#CreateTimeFr' data-toggle='modal' style='float: left; margin-bottom: 10px' data-id='" + res.idsuatchieu + "'>";
                            create += "<svg xmlns='http://www.w3.org/2000/svg' data-id='" + res.idsuatchieu + "' data-target='#CreateTimeFr' data-toggle='modal' class='icon icon-tabler icon-tabler-square-plus CreateFr' width='20' height='20' viewBox='0 0 24 24' stroke-width='1.5' stroke='#ffffff' fill='none' stroke-linecap='round' stroke-linejoin='round'>";
                            create += "<path stroke='none' d='M0 0h24v24H0z' fill='none' />"
                            create += "<rect x='4' y='4' width='16' height='16' rx='2' />";
                            create += "<line x1='9' y1='12' x2='15' y2='12' />";
                            create += "<line x1='12' y1='9' x2='12' y2='15' />";
                            create += "</svg>"
                            create += "Thêm khung giờ mới";
                            create += "</a >";
                            html += "";
                            for (let i = 0; i < res.count; i++) {
                                html += "<tr>";
                                html += "<td>" + (i + 1) + "</td>";
                                html += "<td>" + itemtime[i] + "</td>";
                                html += "<td><a href='#' class='btn btn-danger deletet'  data-id='" + itemid[i] + "' data-idsc='" + res.idsuatchieu + "'>Xóa</a></td>";
                                html += "</tr>";
                            }
                            $('#createaatime').html(create);
                            $('#showtime').html(html);
                            $('#EditTime').modal('show');
                        }
                    }
                })
            }

            function DeleteTime(id) {
                $.ajax({
                    url: '/Showtime/DeleteTime/',
                    type: 'POST',
                    data: {
                        id: id,
                    },
                    success: function (res) {
                        //if (res.success)
                        //    window.location.reload();

                    }
                });
            }

            function ShowCreateTimeFr(id) {
                $.ajax({
                    url: '/Showtime/ShowCreateTimeFr/',
                    type: 'GET',
                    data: {
                        id: id,
                    },
                    success: function (res) {
                        if (res.count != null) {
                            $('#idsc').val(res.id);
                            var id = res.idtimes;
                            var time = res.times;
                            var html = "";
                            html += "<select name='timeframe' id='timeframe'>";
                            for (let i = 0; i < res.count; i++) {
                                html += "<option value='" + id[i] + "'>" + time[i] + "</option>";
                            }
                            html += "</select>";
                            $("#listtime").html(html);
                            $('#CreateTimeFr').modal('show');
                        }
                    }
                });
            }


            function CreateTimeFr(id, idtime) {
                $.ajax({
                    url: '/Showtime/CreateTimeFr/',
                    type: 'POST',
                    data: {
                        id: id,
                        idtime: idtime,
                    },
                    success: function (res) {
                        $('#CreateTimeFr').modal('hide');
                    }
                });
            }

            //Wait for element
            function sleep(milliseconds) {
                const date = Date.now();
                let currentDate = null;
                do {
                    currentDate = Date.now();
                } while (currentDate - date < milliseconds);
            }

        });

    </script>
}
