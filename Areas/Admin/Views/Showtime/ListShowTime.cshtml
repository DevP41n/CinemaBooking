@model IEnumerable<CinemaBooking.Models.suat_chieu>

@{
    ViewBag.Title = "ListShowTime";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@{ CinemaBooking.Models.CinemaBookingEntities db = new CinemaBooking.Models.CinemaBookingEntities();}
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <div class="page-title-box">
                        <h4 class="font-size-18">Data Table</h4>
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Veltrix</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Tables</a></li>
                            <li class="breadcrumb-item active">Data Table</li>
                        </ol>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="float-right d-none d-md-block">
                        <div class="dropdown">
                            <a class="btn btn-primary dropdown-toggle waves-effect waves-light" href="@Url.Action("CreateShowTime","Showtime")">
                                <i class="fas fa-upload"></i> Thêm suất chiếu mới
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end page title -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="card-title">Buttons example</h4>
                            <p class="card-title-desc">
                                The Buttons extension for DataTables
                                provides a common set of options, API methods and styling to display
                                buttons on a page that will interact with a DataTable. The core library
                                provides the based framework upon which plug-ins can built.
                            </p>

                            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th>
                                            STT
                                        </th>
                                        <th>
                                            Phim
                                        </th>
                                        <th>
                                            Ngày Chiếu
                                        </th>
                                        <th>
                                            Khung giờ
                                        </th>
                                        <th>
                                            Rạp
                                        </th>
                                        <th>
                                            Công cụ
                                        </th>
                                    </tr>
                                </thead>

                                @{ int rownumber = 1; }
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @(rownumber++)
                                            </td>
                                            <td>
                                                @item.phim.ten_phim
                                            </td>
                                            <td>
                                                @Html.FormatValue(@item.ngay_chieu, "{0:MM/dd/yyyy}")
                                            </td>
                                            <td>
                                                @foreach (var i in db.suatchieu_timeframe.Where(x => x.id_Suatchieu == item.id))
                                                {
                                                    <a class="btn btn-primary">@i.TimeFrame.Time</a>
                                                }
                                            </td>
                                            <td>
                                                @item.phong_chieu.ten_phong
                                            <td>
                                                <button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Chỉnh sửa">
                                                    <a href="@Url.Action("EditShowTime", "Showtime", new { id = item.id })" class="text-white">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit-circle" width="16" height="16" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                            <path d="M12 15l8.385 -8.415a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3z" />
                                                            <path d="M16 5l3 3" />
                                                            <path d="M9 7.07a7.002 7.002 0 0 0 1 13.93a7.002 7.002 0 0 0 6.929 -5.999" />
                                                        </svg>
                                                    </a>
                                                </button>

                                                @*<button type="button" class="btn btn-primary ListTime" data-target="#ListTime" data-toggle="modal" data-placement="top" title="Danh sách khung giờ" data-id="@item.id">
                                                    <a class="text-white ListTime">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-clipboard-list" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                            <path d="M9 5h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2h-2" />
                                                            <rect x="9" y="3" width="6" height="4" rx="2" />
                                                            <line x1="9" y1="12" x2="9.01" y2="12" />
                                                            <line x1="13" y1="12" x2="15" y2="12" />
                                                            <line x1="9" y1="16" x2="9.01" y2="16" />
                                                            <line x1="13" y1="16" x2="15" y2="16" />
                                                        </svg>
                                                    </a>
                                                </button>*@

                                            <a href="" class="btn btn-primary ListTime" data-target="#ListTime" data-toggle="modal" title="Danh sách khung giờ" data-id="@item.id">List</a>

                                                <button type="button" class="btn btn-danger waves-effect waves-light" data-toggle="tooltip" data-placement="top" title="Xóa">
                                                    <a href="@Url.Action("DeleteConfirmed", "Showtime", new { id = item.id })" class="text-white">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="16" height="16" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                            <line x1="4" y1="7" x2="20" y2="7" />
                                                            <line x1="10" y1="11" x2="10" y2="17" />
                                                            <line x1="14" y1="11" x2="14" y2="17" />
                                                            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                                            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                                                        </svg>
                                                    </a>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->



        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->

</div>
<!-- end main content-->
<!-- Modal E-->
<div class="modal fade" id="EditTime" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Danh sách khung giờ</h5>               
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <a class="btn btn-success pull-right" data-target="#CreateSeat" data-toggle="modal" style="float:left;margin-bottom:10px">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-square-plus" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <rect x="4" y="4" width="16" height="16" rx="2" />
                            <line x1="9" y1="12" x2="15" y2="12" />
                            <line x1="12" y1="9" x2="12" y2="15" />
                        </svg> Thêm khung giờ mới
                    </a>
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">Khung giờ</th>
                            <th scope="col">Công cụ</th>
                        </tr>
                    </thead>
                    <tbody id="showtime">

                    </tbody>

                </table>
            </div>
            <div class="modal-footer">
                @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-id="" id="btnEditSeat">Save changes</button>*@
            </div>
        </div>
    </div>
    </div>
    <!------------------------------------------------>
    @section Scripts{
        <script>
            $(document).ready(function () {
                $('body').on('click', '.ListTime', function () {
                    var idsuatchieu = $(this).data('id');
                    LoadTime(idsuatchieu);
                });
                function LoadTime(idsuatchieu) {
                    $.ajax({
                        url: '/Showtime/ShowDataTime/',
                        type: 'GET',
                        data: {
                            idsuatchieu: idsuatchieu,
                        },
                        success: function (res) {
                            if (res.count != null) {
                                var itemid = res.id;
                                var itemtime = res.Times;
                                var html = "";
                                for (let i = 0; i < res.count; i++) {
                                    html += "<tr>";
                                    html += "<td>" + (i + 1) + "</td>";
                                    html += "<td>" + itemtime[i] + "</td>";
                                    html += "<td><a href='#' class='btn btn-warning' data-id='" + itemid[i] + "'>Sửa</a> | <a href='#' class='btn btn-danger'  data-id='" + itemid[i] +"'>Xóa</a></td>";
                                    html += "</tr>";
                                }
                                $('#showtime').html(html);
                                $('#EditTime').modal('show');
                            }
                        }
                    })
                }
            });

        </script>
    }
