            function CreateTimeFr(id, idtime) {
                $.ajax({
                    url: '/Showtime/CreateTimeFr/',
                    type: 'POST',
                    data: {
                        id: id,
                        idtime: idtime,
                    },
                    success: function (res) {
                        if (res.success == true) {
                            $('#CreateTimeFr').modal('hide');
                        }
                        else {
                            toastr.warning("Đã xảy ra lỗi, vui lòng thử lại!");
                            $('#CreateTimeFr').modal('hide');
                        }
                    }
                });
            }

            //Wait for element
            function sleep(milliseconds) {
                const date = Date.now();
                let currentDate = null;
                do {
                    currentDate = Date.now();
                } while (currentDate - date < milliseconds);
            }

