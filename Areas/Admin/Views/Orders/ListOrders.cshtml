@model IEnumerable<CinemaBooking.Models.order>

@{
    ViewBag.Title = "ListOrders";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@{ CinemaBooking.Models.CinemaBookingEntities db = new CinemaBooking.Models.CinemaBookingEntities();}
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <div class="page-title-box">
                        <h4 class="font-size-18">Phim</h4>
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                            <li class="breadcrumb-item active">User</li>
                        </ol>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="float-right d-none d-md-block">
                        <div class="dropdown">
                            <a class="btn btn-primary dropdown-toggle waves-effect waves-light" href="@Url.Action("CreateUser","User")">
                                <i class="fas fa-upload"></i> Thêm user mới
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end page title -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <ul class="nav nav-tabs nav-tabs-custom" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#list" role="tab">
                                        <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                                        <span class="fas fa-list-ol">&ensp;Danh Sách</span>
                                    </a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active p-3" id="list" role="tabpanel">
                                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                        <thead>
                                            <tr>
                                                <th>
                                                    STT
                                                </th>
                                                <th>
                                                    Ngày mua
                                                </th>
                                                <th>
                                                    Khách hàng
                                                </th>
                                                <th>
                                                    Số lượng vé
                                                </th>
                                                <th>
                                                    Phim
                                                </th>
                                                <th>
                                                    Phòng chiếu
                                                </th>
                                                <th>
                                                    Thời gian
                                                </th>

                                                <th>
                                                    Tổng tiền
                                                </th>


                                            </tr>
                                        </thead>

                                        @{ int rownumber = 1; }
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @(rownumber++)
                                                    </td>

                                                    <td>
                                                        @item.ngay_mua
                                                    </td>

                                                    <td>
                                                        @item.khach_hang.ho_ten
                                                    </td>
                                                    <td>
                                                        @item.so_luong_ve
                                                    </td>

                                                    <td>
                                                        @item.phim.ten_phim
                                                    </td>
                                                    <td>
                                                        @item.phong_chieu.ten_phong
                                                    </td>
                                                    @{var it = db.TimeFrames.Find(item.status);}
                                                    <td>
                                                        @Html.FormatValue(@item.suat_chieu.ngay_chieu, "{0:dd/MM/yyyy}") - (@it.Time)
                                                    </td>
                                                    <td>
                                                        @item.tong_tien
                                                    </td>

                                                    <td>
                                                        <button type="button" class="btn btn-primary Order" data-toggle="modal"  data-id="@item.id">
                                                            Xem chi tiết
                                                        </button>
                                                    </td>
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->



        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->





</div>
<!-- end main content-->
<!-- Modal -->
<div class="modal fade" id="Ord" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">Tên ghế</th>
                            <th scope="col">Giá vé</th>
                        </tr>
                    </thead>
                    <tbody id="showod">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.Order', function () {
                var ido = $(this).data('id');
                LoadDetails(ido);
            });
            function LoadDetails(idorder) {
                $.ajax({
                    url: '/Orders/OrderDetail',
                    type: 'GET',
                    data: {
                        idorder: idorder,
                    },
                    success: function (res) {
                        if (res.Count != null) {
                            var od = res.top;
                            var tie = res.tien;
                            var html = "";

                            for (let i = 0; i < res.Count; i++) {
                                html += "<tr>";
                                html += "<th scope='row'>";
                                html += i + 1;
                                html += "</th>";
                                html += "<td>" + od[i] + "</td>";
                                html += "<td>" + tie[i] + "</td>";
                                html += "</tr>"
                            }
                            $('#showod').html(html);
                            $('#Ord').modal('show');
                        }
                    }
                });
            }



        });
    </script>
}