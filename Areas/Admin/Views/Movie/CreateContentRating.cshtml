@model CinemaBooking.Models.content_rating
@{ CinemaBooking.Models.CinemaBookingEntities db = new CinemaBooking.Models.CinemaBookingEntities();}
@{
    ViewBag.Title = "Create Content Rating";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <div class="page-title-box">
                        <h4 class="font-size-18">Tạo loại đánh giá nội dung </h4>
                        @*<ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Veltrix</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
                            <li class="breadcrumb-item active">Form Elements</li>
                        </ol>*@
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="float-right d-none d-md-block">
                       @* <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle waves-effect waves-light" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="mdi mdi-settings mr-2"></i> Settings
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        </div>*@
                    </div>
                </div>
            </div>
            <!-- end page title -->

            @using (Html.BeginForm("CreateContentRating", "Movie", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h6>Những loại đang có</h6>
                                <table class="table table-striped table-bordered dt-responsive nowrap" style=" width: fit-content;">
                                    <thead>
                                        <tr>
                                            <th>Loại</th>

                                            <th>Tên</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in db.content_rating.OrderBy(x => x.ID))
                                        {
                                            <tr>
                                                <th>@item.ID</th>
                                                <th>@item.ten_rating</th>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group row row">
                                    @Html.LabelFor(model => model.ID, "Loại mới", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row row">
                                    @Html.LabelFor(model => model.ten_rating, "Tên mới", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.ten_rating, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ten_rating, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row row">
                                    @Html.LabelFor(model => model.mo_ta, "Mô tả", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.mo_ta, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.mo_ta, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="float-lg-right">
                                    <div class="form-group mb-0">
                                        <div>
                                            <input type="submit" value="Create" class="btn btn-primary waves-effect waves-light mr-1" />
                                            <input type="reset" value="Cancel" class="btn btn-primary waves-effect waves-light mr-1" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-4">

                                </div>

                                <div class="form-group mb-0">
                                    @Html.ActionLink("Back to List", "ListContentRating")
                                </div>
                            </div>

                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->
            }
        </div>
    </div>
    <!-- End Page-content -->
</div>
<!-- end main content-->
