@model PagedList.IPagedList<CinemaBooking.Models.dien_vien>
@using PagedList.Mvc
@{
    ViewBag.Title = "Danh Sách Diễn Viên";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<!-- ==========Event-Section========== -->
<section class="movie-section padding-top padding-bottom">
    <div class="container">
        <div class="col-lg-12 mb-50 mb-lg-0">
            <div class="filter-area tt-menu-actor tt-open-actor" style=" left: 0px; z-index: 100; width: 100%; display: block; background-color: #ffffff00; border-radius: 10px;">
                <input id="SearchActor" name="nameActor" class="autosuggest" type="text" placeholder="Tìm kiếm diễn viên..." autocomplete="off" >
            </div>
            <div class="filter-tab tab">
                <div class="tab-area">
                    <div class="tab-item active">
                        <div class="row mb-10">
                            @foreach (var item in Model)
                            {
                                <div class="col-sm-4 col-lg-2" style=" margin-bottom: 40px;">
                                    <div class="speaker-item">
                                        <div class="speaker-thumb">
                                            <a href="@Url.Action("ActorDetail","Information", new { id=item.slug })">
                                                <img src="~/images/information/@item.anh" alt="speaker" style="height: 300px; width: fit-content;">
                                            </a>
                                        </div>
                                        <div class="speaker-content">
                                            <h5 class="title">
                                                <a href="@Url.Action("ActorDetail","Information", new { id=item.slug })">
                                                    @item.ho_ten
                                                </a>
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
                <div class="pagination-area text-center">
                    @Html.PagedListPager(Model, page => Url.Action("Actor", "Information", new { page }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Event-Section========== -->
<script type="text/javascript">
    function codeAddress() {
        $('.menu li a.informationac').addClass('active');
    }
    window.onload = codeAddress;
</script>
