@model PagedList.IPagedList<CinemaBooking.Models.dien_vien>
@using PagedList.Mvc
@{
    ViewBag.Title = "Actor";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<!-- ==========Event-Section========== -->
<section class="movie-section padding-top padding-bottom">
    <div class="container">
        <div class="col-lg-12 mb-50 mb-lg-0">
            <div class="filter-tab tab">
                <div class="filter-area">
                    <div class="filter-main">
                        @*<ul class="grid-button tab-menu">
                            <li class="active">
                                <i class="fas fa-th"></i>
                            </li>
                            <li>
                                <i class="fas fa-bars"></i>
                            </li>
                        </ul>*@
                    </div>
                </div>
                <div class="tab-area">
                    <div class="tab-item active">
                        <div class="row mb-10">
                            @foreach (var item in Model)
                            {
                                <div class="col-sm-6 col-lg-3" style=" margin-bottom: 40px;">
                                    <div class="speaker-item">
                                        <div class="speaker-thumb">
                                            <a href="@Url.Action("ActorDetail","Information", new { id=item.id })">
                                                <img src="/Frontend/Client/assets/images/speaker/speaker01.jpg" alt="speaker">
                                            </a>
                                        </div>
                                        <div class="speaker-content">
                                            <h5 class="title">
                                                <a href="@Url.Action("ActorDetail","Information", new { id=item.id })">
                                                    @item.ho_ten
                                                </a>
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    
                </div>
                <div class="pagination-area text-center">
                    @Html.PagedListPager(Model, page => Url.Action("Actor", "Information", new { page }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Event-Section========== -->
<script>
    function codeAddress() {
        $('.menu li a.informationac').addClass('active');
    }
    window.onload = codeAddress;
</script>